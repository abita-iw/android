<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/new_pin_type"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="New Pin"
        android:textColor="#ffffffff"
        android:background="#fffbbc05"
        android:padding="15dp"
        android:textSize="30dp"/>

    <ImageView
        android:id="@+id/new_pin_image_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give a title for your post"
        android:textColor="#ff000000"
        android:paddingLeft="15dp"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:id="@+id/new_pin_title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Give a short description for your post"
        android:textColor="#ff000000"
        android:paddingLeft="15dp"
        android:layout_margin="5dp"
        android:textSize="20dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:textSize="20dp"
        android:id="@+id/new_pin_description" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:layout_margin="5dp"
        android:text="Continue"
        android:id="@+id/new_pin_title_finished"/>

</LinearLayout>